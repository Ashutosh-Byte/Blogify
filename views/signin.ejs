<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>Homepage</title>
    <style>
      body {
        background: linear-gradient(120deg, #0f172a 0%, #1e293b 100%);
        min-height: 100vh;
        margin: 0;
        font-family: "San Francisco", "Segoe UI", "Helvetica Neue", Arial,
          sans-serif;
        color: #e2e8f0;
      }

      .container {
        max-width: 420px;
        margin: 56px auto;
      }

      form {
        background: rgba(30, 41, 59, 0.85);
        border-radius: 18px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(18px) saturate(180%);
        -webkit-backdrop-filter: blur(18px) saturate(180%);
        padding: 32px 28px 24px 28px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        transition: box-shadow 0.3s, background 0.4s, backdrop-filter 0.4s;
        animation: formBlurIn 0.7s ease;
      }

      @keyframes formBlurIn {
        from {
          opacity: 0;
          transform: translateY(24px) scale(0.98);
        }
        to {
          opacity: 1;
          transform: translateY(0) scale(1);
        }
      }

      form:hover {
        background: rgba(30, 41, 59, 0.95);
        box-shadow: 0 12px 36px rgba(0, 0, 0, 0.4);
      }

      .form-label {
        font-weight: 600;
        color: #f1f5f9;
        letter-spacing: 0.5px;
      }

      .form-control {
        border-radius: 10px;
        border: 1px solid #334155;
        padding: 10px 14px;
        font-size: 1rem;
        background: #0f172a;
        color: #f8fafc;
        caret-color: #f8fafc;
        transition: border 0.2s, box-shadow 0.2s;
        margin-bottom: 12px;
      }

      .form-control:valid {
        border-color: #22c55e;
        box-shadow: 0 0 0 2px rgba(34, 197, 94, 0.5);
      }

      .form-control:invalid {
        border-color: #ef4444;
        box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.5);
      }

      ::placeholder {
        color: #94a3b8;
        opacity: 1;
      }

      .form-text {
        color: #94a3b8;
        font-size: 0.875rem;
      }

      .btn-primary {
        background: linear-gradient(90deg, #3b82f6 0%, #2563eb 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 10px;
        font-size: 1.08rem;
        font-weight: 600;
        color: #fff;
        box-shadow: 0 2px 8px rgba(37, 99, 235, 0.2);
        transition: background 0.2s, box-shadow 0.2s;
      }

      .btn-primary:hover,
      .btn-primary:focus {
        background: linear-gradient(90deg, #1d4ed8 0%, #3b82f6 100%);
        box-shadow: 0 4px 16px rgba(37, 99, 235, 0.35);
      }
    </style>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>
    <div class="container mt-4">
      <form action="/user/signin" method="Post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Email address</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="Email"
            required
          />
          <div id="emailHelp" class="form-text">
            We'll never share your email with anyone else.
          </div>
          <div id="emailValidation" class="form-text"></div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="Password"
            required
          />
          <div id="passwordValidation" class="form-text"></div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <%- include("./partials/script.ejs") %>
    <script>
      const emailInput = document.getElementById("exampleInputEmail1");
      const passwordInput = document.getElementById("exampleInputPassword1");
      const emailValidation = document.getElementById("emailValidation");
      const passwordValidation = document.getElementById("passwordValidation");

      emailInput.addEventListener("input", () => {
        if (emailInput.validity.valid) {
          emailValidation.textContent = "Valid email ✅";
          emailValidation.style.color = "#22c55e";
        } else {
          emailValidation.textContent = "Please enter a valid email.";
          emailValidation.style.color = "#ef4444";
        }
      });

      passwordInput.addEventListener("input", () => {
        if (passwordInput.value.length >= 6) {
          passwordValidation.textContent = "Looks good ✅";
          passwordValidation.style.color = "#22c55e";
        } else {
          passwordValidation.textContent =
            "Password must be at least 6 characters.";
          passwordValidation.style.color = "#ef4444";
        }
      });
    </script>
  </body>
</html>
